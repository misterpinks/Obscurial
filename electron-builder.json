
{
  "appId": "app.lovable.obscurial",
  "productName": "Obscurial",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "index.js",
    "src/assets/**/*",
    "public/models/**/*"
  ],
  "extraMetadata": {
    "description": "Facial Privacy Editor Application",
    "main": "index.js"
  },
  "extraResources": [
    {
      "from": "public/models",
      "to": "models",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      "portable",
      "nsis"
    ],
    "icon": "public/app-icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "public/app-icon.png",
    "category": "public.app-category.graphics-design"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "public/app-icon.png",
    "category": "Graphics"
  },
  "publish": null
}
